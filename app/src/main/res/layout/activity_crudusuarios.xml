<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".crudusuarios">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="325dp"
        android:layout_height="436dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="false"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@color/white" />

    <EditText
        android:id="@+id/id_email_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/id_apellido_crud"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="432dp"
        android:text="@string/ret"
        app:icon="@mipmap/ret"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@+id/id_apellido_crud"
        app:layout_constraintTop_toTopOf="@+id/id_apellido_crud"
        app:srcCompat="@mipmap/secondname" />

    <EditText
        android:id="@+id/id_nombre_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@+id/id_email_crud"
        app:layout_constraintTop_toTopOf="@+id/id_email_crud"
        app:srcCompat="@mipmap/email" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@+id/id_nombre_crud"
        app:layout_constraintTop_toTopOf="@+id/id_nombre_crud"
        app:srcCompat="@mipmap/name" />

    <EditText
        android:id="@+id/id_phone_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="phone"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/id_password_crud"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@+id/id_password_crud"
        app:layout_constraintTop_toTopOf="@+id/id_password_crud"
        app:srcCompat="@mipmap/key" />

    <EditText
        android:id="@+id/id_password_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:hint="@string/contra"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/id_email_crud"
        app:layout_constraintStart_toStartOf="@+id/id_email_register"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/crud"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="48dp"
        android:onClick="btnContinuar"
        android:text="@string/continu"
        app:icon="@mipmap/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_apellido_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="@string/secondname"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/id_nombre_crud"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@+id/id_phone_crud"
        app:layout_constraintTop_toTopOf="@+id/id_phone_crud"
        app:srcCompat="@mipmap/phone" />

    <RadioGroup
        android:layout_width="109dp"
        android:layout_height="118dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="192dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11">

        <RadioButton
            android:id="@+id/rButton_register"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="@string/register"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rButtonFind"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="@string/search"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rButtonModify"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="@string/modify"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rButtonDelete"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="@string/delete"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="404dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:srcCompat="@mipmap/crud" />

</androidx.constraintlayout.widget.ConstraintLayout>